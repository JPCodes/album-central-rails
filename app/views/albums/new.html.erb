<h1>List an Album for Sale</h1>

<%= form_for @album do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :artist %>
  <%= f.text_field :artist %>
  <%= f.label :release_date %>
  <%= f.date_field :release_date %>
  <%= f.submit %>
<% end %>
