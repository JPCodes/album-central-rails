<h1>Albums</h1>

<div class="row">
<% @albums.each do |album| %>
<div class="col-md-4">
  <p><%= link_to album.name, album_path(album) %> | <%= link_to 'Remove Album', album_path(album),
                         :data => {:confirm => "Confirm Album Deletion?",
                         :method => "delete"} %></p>
</div>
<% end %>
</div>

<p><%= link_to 'Add a New Album', new_album_path %></p>
