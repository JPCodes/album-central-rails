<div class="col-lg-12 text-center">
  <h2 class="section-heading">Albums for Sale</h2>
  <h3 class="section-subheading text-muted">NOTICE: Default picture will display if the image link is less than 10 characters long.</h3>
</div>

<%  @albums.each do |album| %>
<div class="col-md-4 col-sm-6 portfolio-item">
  <% if album.image.length < 10 %>
    <%= image_tag 'portfolio/roundicons.png', :class => 'img-responsive'  %>
  <% else %>
    <%= image_tag album.image, :class => 'img-responsive' %>
  <% end %>
  <div class="portfolio-caption">
      <h4><%= link_to album.name, album_path(album) %></h4>
      <p class="text-muted">Artist: <%= album.artist %></p>
  </div>
</div>
<% end %>
