<div class="col-lg-12 text-center">
  <h2 class="section-heading">Album: <%= @album.name %></h2>
  <h3 class="section-subheading text-muted">Artist: <%= @album.artist %></h3>
</div>

<%= content_tag(:div, notice, class: 'notice') if notice %>

<p class="text-center">Price: $<%= @album.price %></p>
<% if @album.image.length < 10 %>
  <%= image_tag ('portfolio/'.concat((rand(1...6)).to_s).concat('.jpg')), :class => 'img-responsive img-centered', size: "400x289"  %>
<% else %>
  <%= image_tag @album.image, :class => 'img-responsive' %>
<% end %>
<br>
<p class="text-center"><%= link_to "Edit Album", edit_album_path(@album) %></p>
<p class="text-center"><%= link_to "Delete Album", album_path(@album), :data => {:confirm => "Are you sure?", :method => "delete"} %></p>
